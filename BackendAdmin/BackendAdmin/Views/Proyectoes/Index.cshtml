@model IEnumerable<BackendAdmin.Models.Proyecto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Crear Proyecto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreProyecto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreProyecto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdProyecto">Edit</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdProyecto">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProyecto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
